@model API_Pruebas.Models.ConsultaModel

@{
    ViewData["Title"] = "Consulta";
}

<h2>Consultar registros</h2>

<form asp-action="Index" asp-controller="Consulta" method="post">
    <div class="mb-3">
        <label asp-for="userName" class="form-label">Usuario</label>
        <input type="text" class="form-control" asp-for="userName">
    </div>
    <div class="mb-3">
        <label asp-for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" asp-for="password">
    </div>
    <div class="mb-3">
        <label asp-for="IdConpre" class="form-label">Id Documento</label>
        <input type="text" class="form-control" asp-for="IdConpre">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="mt-2 w-auto response-container">@ViewBag.ResponseContent</div>

<style>
    .response-container {
        width: 100%;
        max-height: 300px; 
        overflow: auto;
        word-wrap: break-word;
        white-space: pre-wrap;
        padding: 10px;
    }
</style>